# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Get your user ID from @userinfobot on Telegram
TELEGRAM_ALLOWED_USERS=123456789,987654321

# Google Gemini API
# Get API key from https://aistudio.google.com/
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_DEFAULT_MODEL=gemini-2.0-flash-exp

# Working Directory Configuration
# Comma-separated list of allowed paths (supports ~ for home directory)
ALLOWED_PATHS=~/Documents,~/Downloads,~/Desktop
DEFAULT_WORKING_DIR=~/Documents

# Quota Limits
MAX_REQUESTS_PER_HOUR=100
MAX_TOKENS_PER_DAY=1000000

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# Google Cloud Credentials (for Nano Banana image generation)
# Option 1: Use application default credentials (recommended)
# Run: gcloud auth application-default login
# Option 2: Set credentials file path
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
