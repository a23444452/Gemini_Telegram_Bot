# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_ADMIN_ID=your_telegram_user_id_here

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# MCP Configuration
MCP_ENABLED=true
MCP_SERVERS_CONFIG=./config/mcp-servers.json

# Permission System
PERMISSION_SYSTEM_ENABLED=true
USERS_DATA_PATH=./data/users.json

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/bot.log

# Browser Automation (Playwright)
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# File Processing
MAX_FILE_SIZE_MB=20
ALLOWED_FILE_TYPES=pdf,docx,txt,json,md

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Optional: Database (if implementing persistence later)
# DATABASE_URL=sqlite://./data/bot.db
